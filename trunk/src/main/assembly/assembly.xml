<assembly>
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.easymock:easymock</exclude>
                <exclude>org.easymock:easymockclassextension</exclude>
                <exclude>junit:junit</exclude>
            </excludes>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <includes>
                <include>${project.build.outputDirectory}/*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/scripts</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/etc</directory>
            <outputDirectory>/etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/tmp</directory>
            <outputDirectory>/tmp</outputDirectory>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
